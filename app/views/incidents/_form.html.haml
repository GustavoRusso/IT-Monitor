= form_for @incident do |f|
  - if @incident.errors.any?
    #error_explanation
      %h2= "#{pluralize(@incident.errors.count, "error")} prohibited this incident from being saved:"
      %ul
        - @incident.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :key
    = f.text_field :key
  .field
    = f.label :service
    = f.text_field :service
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :severity
    = f.text_field :severity
  .field
    = f.label :status
    = f.text_field :status
  .field
    = f.label :open_time
    = f.datetime_select :open_time
  .field
    = f.label :close_time
    = f.datetime_select :close_time
  .actions
    = f.submit 'Save'
