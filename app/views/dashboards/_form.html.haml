= form_for @dashboard do |f|
  - if @dashboard.errors.any?
    #error_explanation
      %h2= "#{pluralize(@dashboard.errors.count, "error")} prohibited this dashboard from being saved:"
      %ul
        - @dashboard.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :active_incidents
    = f.number_field :active_incidents
  .field
    = f.label :active_problems
    = f.number_field :active_problems
  .field
    = f.label :requested_changes
    = f.number_field :requested_changes
  .actions
    = f.submit 'Save'
